                        <input type="text" class="form-control" id="formGroupCheck-In" placeholder="Check-In">
                    </div>
                    <div class="form-group mb-0 ">
                        <label for="formGroupCheck-Out"></label>
                        <input type="text" class="form-control" id="formGroupCheck-Out" placeholder="Check-Out">
                    </div>
